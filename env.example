# Firebase Configuration for Next.js
# Copy this file to .env.local and fill in your Firebase project credentials

# Get these values from your Firebase project console:
# https://console.firebase.google.com/project/YOUR_PROJECT_ID/settings/general

# Note: Next.js requires NEXT_PUBLIC_ prefix for client-side environment variables

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=1:your_sender_id:web:your_app_id_here

# Optional: Set to 'true' to use test/demo mode (no real Firebase connection)
NEXT_PUBLIC_USE_TEST_FIREBASE=false