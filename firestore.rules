rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: only authenticated users can read; only admins(HR) can write roles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId; // user can create own doc
      allow update: if request.auth != null && (
        request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hr'
      );
      allow delete: if false;
    }

    // Feedback: employee can create their own feedback; HR can read and update status
    match /feedback/{feedbackId} {
      allow create: if request.auth != null && request.resource.data.employeeId == request.auth.uid;
      allow read: if request.auth != null && (
        resource.data.employeeId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hr'
      );
      allow update: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hr' || resource.data.employeeId == request.auth.uid
      );
      allow delete: if false;
    }

    // Conversations and messages: only participants can read/write messages
    match /conversations/{convId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && request.resource.data.participants is list && request.auth.uid in request.resource.data.participants;
      allow update: if false; // updates to conversation metadata only via server or functions
    }

    match /messages/{messageId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid
        && exists(/databases/$(database)/documents/conversations/$(request.resource.data.conversationId));
      allow read: if request.auth != null && (
        exists(/databases/$(database)/documents/conversations/$(resource.data.conversationId)) &&
        request.auth.uid in get(/databases/$(database)/documents/conversations/$(resource.data.conversationId)).data.participants
      );
      allow update, delete: if false;
    }

    // Tasks: only HR can create or assign tasks; assigned user can read and update status
    match /tasks/{taskId} {
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hr';
      allow read: if request.auth != null && (
        resource.data.assignedTo == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hr'
      );
      allow update: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hr' || resource.data.assignedTo == request.auth.uid
      );
      allow delete: if false;
    }

    // Notifications: allow read for user; create only by authenticated server (we can't distinguish server here so allow user or hr)
    match /notifications/{notifId} {
      allow create: if request.auth != null; // consider limiting with App Check or server-managed tokens
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Fallback deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
